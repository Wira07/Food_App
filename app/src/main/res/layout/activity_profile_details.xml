<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white"
    tools:context=".about.ProfileDetailsActivity">

    <!-- Profile ID -->
    <TextView
        android:id="@+id/tvId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID: 12345"
        android:textSize="16sp"
        android:textColor="@android:color/darker_gray"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"/>

    <!-- Profile Picture -->
    <ImageView
        android:id="@+id/imgProfile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo_food_app"
        android:layout_below="@id/tvId"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp" />

    <!-- Profile Name -->
    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wira Sukma Saputra"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_below="@id/imgProfile"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp" />


    <!-- Card for Name -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardName"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvName"
        android:layout_marginBottom="16dp"
        android:padding="16dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NAME"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"
                android:textColor="@android:color/darker_gray" />

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gail Forcewind"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"
                android:padding="8dp"
                android:background="@android:color/white"
                android:gravity="start"
                android:inputType="textPersonName" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Card for Email -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardName"
        android:layout_marginBottom="16dp"
        android:padding="16dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EMAIL"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"
                android:textColor="@android:color/darker_gray" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="gailforcewind@mail.com"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"
                android:padding="8dp"
                android:background="@android:color/white"
                android:gravity="start"
                android:inputType="textEmailAddress" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Card for Phone -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardEmail"
        android:layout_marginBottom="16dp"
        android:padding="16dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PHONE"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"
                android:textColor="@android:color/darker_gray" />

            <EditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+1 652 254 7625"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"
                android:padding="8dp"
                android:background="@android:color/white"
                android:gravity="start"
                android:inputType="phone" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Edit and Save Buttons Layout -->
    <LinearLayout
        android:id="@+id/buttonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardPhone"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Edit Profile Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnEditProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:padding="8dp"
            android:textSize="18sp"
            android:drawableLeft="@android:drawable/ic_menu_edit"
            android:background="@android:color/holo_orange_light"
            android:textColor="@android:color/white"
            android:layout_marginEnd="16dp" />

        <!-- Save Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:padding="8dp"
            android:textSize="18sp"
            android:drawableLeft="@android:drawable/ic_menu_save"
            android:background="@android:color/holo_blue_light"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        app:itemTextColor="@color/black_overlay"
        app:menu="@menu/menu_item" />

</RelativeLayout>
